{
    "name": "unaluka/products-scrap-api",
    "description": "A web scrapper for Unaluka",
    "authors": [
        {
            "name": "Angel Cubas",
            "email": "langelcubas92@gmail.com"
        }
    ],
    "require": {
        "php": "^7.4",
        "ext-json": "*",
        "monolog/monolog": "^2.8",
        "nyholm/psr7": "^1.5",
        "nyholm/psr7-server": "^1.0",
        "php-di/php-di": "^6.4",
        "slim/slim": "^4.11",
        "symfony/dom-crawler": "^5.4",
        "symfony/http-client": "^5.4"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public"
    }
}
